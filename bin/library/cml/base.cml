<?xml version="1.0" encoding="UTF-8"?>
<cml css="library/css/styles.css" simulator="false" fullscreen="true">


	<StageKit fullscreen="true" />
	
	<!-- External Libraries -->
	<LibraryKit>
		<Library type="swf" src="library/swfs/openexhibits_assets.swf" />
	</LibraryKit>

	<!-- Gigapixel and Hotspots -->
	<Include src="library/cml/Gigapixel.cml" />	
	

	<!-- Albums -->
	<RenderKit>	
		<Renderer dataRootTag="album" dataPath="locations/index.cml">
			<Include src="library/cml/renderers/album.cml" />
		</Renderer>
	</RenderKit>	
	
	<Container class="block">
		<Graphic x="0" y="0" shape="rectangle" width="400" height="1080" fill="color" color="0x000000" lineStroke="0" alpha="0.7" />
